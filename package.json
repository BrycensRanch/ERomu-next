  "scripts": {
    "preprepare": "node i-hate-windows.js",
    "prepare": "husky",
    "app": "tsc && concurrently -r --kill-others \"next -p 8888 ./renderer\"  \"electron .\"",
    "clean": "rimraf release app renderer/.next renderer/out renderer/app .next _results_ .rollup.cache test.png",
    "precheck-types": "tsc --noEmit --pretty",
    "check-types": "tsc --project renderer --noEmit --pretty",
    "build": "next build ./renderer && tsc",
    "predev": "tsc",
    "dev": "concurrently -r --kill-others \"next -p 8888 ./renderer\"  \"node app/main/watch.mjs\"",
    "check-output": "electron app/background.js",
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix .",
    "lint-staged": "run-s lint format",
    "lint:check": "eslint .",
    "test": "playwright test",
    "wdio": "wdio run ./wdio.conf.mts"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
